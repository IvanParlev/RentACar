@model CarDeleteDetailsViewModel
@{
	ViewBag.Title = "Delete Car";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form asp-action="Delete">
	<div class="row">
		<div class="col-md-4">
			<img class="card-img-top" src="@Model.ImageUrl" alt="Car Image">
		</div>
		<div class="col-md-8">
			<div class="form-group">
				<label asp-for="CarModel" class="control-label"></label>
				<input asp-for="CarModel" class="form-control" disabled="disabled" />
			</div>
			<div class="form-group mt-2">
				<input type="submit" value="Delete" class="btn btn-danger" />
			</div>
		</div>
	</div>
</form>