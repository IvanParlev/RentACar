@model ReviewFormModel

@{
	ViewData["Title"] = "Create Review";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Comment"></label>
				<textarea asp-for="Comment" rows="4" class="form-control"></textarea>
				<span asp-validation-for="Comment" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Rating"></label>
				<select asp-for="Rating" class="form-control">
					@for (int rating = 1; rating <= 5; rating++)
					{
						<option value="@rating">@rating</option>
					}
				</select>
				<span asp-validation-for="Rating" class="small textdanger"></span>
			</div>			
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>