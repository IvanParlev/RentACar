@model OrderFormModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="DaysRented"></label>
				<input asp-for="DaysRented" class="form-control" placeholder="5">
				<span asp-validation-for="DaysRented" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PickUpLocationId"></label>
				<select asp-for="PickUpLocationId" class="form-control">
					@foreach (var location in Model.Locations)
					{
						<option value="@location.Id">@location.Address</option>
					}
				</select>
				<span asp-validation-for="PickUpLocationId" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ReturnLocationId"></label>
				<select asp-for="ReturnLocationId" class="form-control">
					@foreach (var location in Model.Locations)
					{
						<option value="@location.Id">@location.Address</option>
					}
				</select>
				<span asp-validation-for="ReturnLocationId" class="small textdanger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>