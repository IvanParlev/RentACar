@using RentACar.Data.Models.Enums
@model CarFormModel
<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Model"></label>
				<input asp-for="Model" class="form-control">
				<span asp-validation-for="Model" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Year"></label>
				<input asp-for="Year" class="form-control" placeholder="2022">
				<span asp-validation-for="Year" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="NumberOfSeats"></label>
				<input asp-for="NumberOfSeats" class="form-control" placeholder="5">
				<span asp-validation-for="NumberOfSeats" class="small text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="GearboxType"></label>
				<select asp-for="GearboxType" class="form-control" asp-items="Html.GetEnumSelectList(typeof(GearboxType))">
					<option selected="selected" value="">Please select</option>
				</select>
				<span asp-validation-for="GearboxType" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FuelType"></label>
				<select asp-for="FuelType" class="form-control" asp-items="Html.GetEnumSelectList(typeof(FuelType))">
					<option selected="selected" value="">Please select</option>
				</select>
				<span asp-validation-for="FuelType" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description"></label>
				<textarea asp-for="Description" rows="4" class="form-control"></textarea>
				<span asp-validation-for="Description" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ImageUrl"></label>
				<input asp-for="ImageUrl" class="form-control" placeholder="URL of the image">
				<span asp-validation-for="ImageUrl" class="small textdanger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PricePerDay"></label>
				<input asp-for="PricePerDay" class="form-control">
				<span asp-validation-for="PricePerDay" class="small textdanger"></span>
			</div>
			<div class="form-group" >
				<label asp-for="CategoryId"></label>
				<select asp-for="CategoryId" class="form-control">
					<option selected="selected" value="">Please select</option>
					@foreach (var category in Model.Categories)
					{
						<option value="@category.Id">@category.Name</option>
					}
				</select>
				<span asp-validation-for="CategoryId" class="small textdanger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Save" />
			</div>
		</form>
	</div>
</div>



